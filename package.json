{
  "name": "fonio",
  "version": "0.0.1",
  "description": "Test implementation of fonio",
  "main": "dist/entry.js",
  "scripts": {
    "dev": "kotatsu serve --config ./webpack.config.js --progress --babel --index ./index.html --public ./ ./src/main.js",
    "build": "kotatsu build client ./src/main.js -o build --config ./webpack.config.js --babel",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "deploy": "surge ./"
  },
  "pre-commit": [
    "build",
    "lint",
    "comb",
    "test",
    "deploy"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/fonio.git"
  },
  "author": "https://github.com/robindemourat",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/medialab/fonio/issues"
  },
  "homepage": "https://github.com/medialab/fonio#readme",
  "dependencies": {
    "codemirror": "^5.19.0",
    "d3-dsv": "^1.0.3",
    "draft-js": "^0.9.1",
    "file-saver": "^1.3.3",
    "gexf": "^0.2.5",
    "github-api": "^2.3.0",
    "leaflet": "^0.7.7",
    "medium-draft": "git+https://github.com/robindemourat/medium-draft.git",
    "oauthio-web": "^0.6.1",
    "pouchdb": "^6.0.7",
    "react": "^15.3.2",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.3.2",
    "react-dropzone": "^3.6.0",
    "react-leaflet": "^0.12.3",
    "react-markdown": "^2.4.2",
    "react-modal": "^1.4.0",
    "react-redux": "^4.4.5",
    "react-select": "^1.0.0-rc.2",
    "react-visjs-timeline": "^1.2.0",
    "redux": "^3.6.0",
    "redux-pouchdb": "^0.1.1",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.4",
    "shallow-equals": "0.0.0",
    "uuid": "^2.0.3"
  },
  "devDependencies": {
    "@yomguithereal/eslint-config": "^3.0.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "csscomb": "^3.1.7",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.1",
    "eslint-plugin-react": "^6.3.0",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^2.0.0",
    "kotatsu": "^0.14.0",
    "mocha": "^3.1.0",
    "node-sass": "^3.8.0",
    "pre-commit": "^1.1.3",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.3.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ]
  }
}
